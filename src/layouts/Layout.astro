---
const { title } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <!-- unik titel ved at bruge props -->
    <title>Circular Lab - {title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* COLOR VARIABLES */
  :root {
    --white: #ffffff;
    --black: #000000;
    --light-blue: #809dad;
    --dark-blue: #003b5c;
    --darker-blue: #02324d;
    --orange: #ff7500;
    --kea-red: #ea5045;
  }

  h1 {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: bold;
    font-size: 4rem;
    color: var(--black);
    text-transform: uppercase;
  }

  h2 {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: bold;
    font-size: 2rem;
    color: var(--black);
    text-transform: lowercase;
  }
  h3 {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: 900;
    font-size: 1.5rem;
    color: var(--dark-blue);
    text-transform: uppercase;
  }
  h4 {
    font-family: "Roboto Condensed", sans-serif;
    font-weight: 900;
    font-size: 1.2rem;
    color: var(--dark-blue);
    text-transform: uppercase;
  }

  p {
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 1rem;
    color: var(--dark-blue);
  }
  a {
    font-family: "Roboto", sans-serif;
    font-weight: bold;
    font-size: 1rem;
    color: var(--black);
    text-transform: uppercase;
  }
  a:hover {
    text-decoration: underline;
    color: var(--white);
  }
  a:visited {
    color: var(--dark-blue);
  }
</style>
